/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 86px !important;
  border-radius: 50%;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 86px;
  height: 86px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
  /* text-align: center; */
}

.container{
 /* background: rgb(94, 166, 233);*/
}

.toIndex,.reMark{
  font-size: 28rpx;
  background-color:var(--main-color);
  border-radius: 100rpx;
  color:white;
  padding: 20rpx;
  margin-top: 50rpx;
}
